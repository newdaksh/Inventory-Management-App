# Environment Configuration Example
# Copy this file to .env and update with your actual values

# n8n Backend Configuration
# Replace with your actual n8n instance URL
BASE_URL=https://your-n8n-instance.com/webhook

# For local development, use:
# BASE_URL=http://localhost:5678/webhook

# Mock Mode (set to true to use mock data when backend is unavailable)
MOCK_MODE=false

# App Configuration
CURRENCY_SYMBOL=$
LOW_STOCK_THRESHOLD=10

# JWT Configuration (should match your n8n JWT node settings)
JWT_SECRET=your-jwt-secret-key

# Database Configuration (for reference - used in n8n workflow)
MONGODB_CONNECTION_STRING=mongodb://your-mongodb-connection
GOOGLE_SHEETS_ID=your-google-sheets-id

# Admin Test Credentials (for testing)
# These should exist in your MongoDB admins collection
TEST_ADMIN_EMAIL=admin@test.com
TEST_ADMIN_PASSWORD=test123

# API Timeouts (in milliseconds)
API_TIMEOUT=30000

# Debug Configuration
ENABLE_DEBUG_LOGS=true

# Push Notifications (if implemented)
EXPO_PUSH_TOKEN=your-expo-push-token

# Analytics (if implemented)
ANALYTICS_API_KEY=your-analytics-key